#!/bin/bash
# postinst script for geonode
#
# see: dh_installdeb(1)

. /usr/share/debconf/confmodule

set -e

# summary of how this script can be called:
#	* <postinst> `configure' <most-recently-configured-version>
#	* <old-postinst> `abort-upgrade' <new version>
#	* <conflictor's-postinst> `abort-remove' `in-favour' <package>
#	  <new-version>
#	* <postinst> `abort-remove'
#	* <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#	  <failed-install-package> <version> `removing'
#	  <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    configure)
        # Patch wfs in owslib for keywords
	patch /var/lib/geonode/src/owslib/owslib/feature/wfs100.py /usr/share/risiko/wfs100.patch

        # Activate virtual environment to install risiko
	source /var/lib/geonode/bin/activate
        pip install /usr/share/risiko/risiko*.tar.gz

        sitedir=`/var/lib/geonode/bin/python -c "from distutils.sysconfig import get_python_lib; print get_python_lib()"`
        ln -s /etc/geonode/local_settings.py $sitedir/risiko/local_settings.py
        cd $sitedir/risiko
        python manage.py syncdb --noinput
        python manage.py collectstatic -v0 --noinput

        cp /var/www/geonode/wsgi/geonode.wsgi /var/www/geonode/wsgi/geonode.wsgi.backup
        sed -i "s/geonode/risiko/g" /var/www/geonode/wsgi/geonode.wsgi
        chown -R www-data:www-data $sitedir
        chown -R www-data:www-data /var/www/geonode
        service apache2 restart

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
	echo "postinst called with unknown argument \`$1'" >&2
	exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

db_stop;

exit 0
